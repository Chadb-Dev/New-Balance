<config>
    <tabs>
        <gomedia_extensions translate="label"  module="parcelninja_webhook">
            <label>Go Media Extensions</label>
            <sort_order>99999</sort_order>
        </gomedia_extensions>
    </tabs>
    <sections>
        <parcelninja_webhook translate="label" module="webhook">
            <label>Parcel Ninja Settings</label>
            <tab>gomedia_extensions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <order translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <api_url>
                            <label>API Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Parcel Ninja API url]]></comment>
                        </api_url>
                        <api_username>
                            <label>API Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Your ParcelNinja API username]]></comment>
                        </api_username>
                        <api_password>
                            <label>API Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Your ParcelNinja API password]]></comment>
                        </api_password>
                        <order_status>
                            <label>Order status code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[The Magento order status code in which a ParcelNinja outbound gets created. If left blank this will be set to "processing"]]></comment>
                        </order_status>
                        <notify_customer>
                            <label>Send customer shipment email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Does the customer get the Magento shipment email]]></comment>
                        </notify_customer>
                    </fields>
                </order>
            </groups>
        </parcelninja_webhook>
    </sections>
</config>